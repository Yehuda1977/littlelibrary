<%- include ('../partials/header'); -%>

<style>
    img {
        height: 200px;
        width: 200px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Little Libraries</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= littlelibrary.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9/night</h4>
                    <h4><a><%= littlelibrary.name %></a></h4>
                    <p><%= littlelibrary.description %></p>
                    <p><em>Submitted by: <strong><%= littlelibrary.author.username %></strong></em></p>
                </div>
            </div>
            <div class="well">
                
                <div class="text-right">
                    <a class="btn btn-success" href="/littlelibraries/<%= littlelibrary._id %>/comments/new">Add New Comment</a>
                </div>  
                <hr>
                
                
                 <% littlelibrary.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="pull-right">10 days ago</span>
                        <p><%= comment.text %></p>
                    </div>
                </div>
                <p>
                    <strong></strong> 
                    
                </p>
                 <% }) %>              
        </div>
         
           
            

           
            
           

            
            
        </div>
    </div>
</div>


<%- include ('../partials/footer'); -%>